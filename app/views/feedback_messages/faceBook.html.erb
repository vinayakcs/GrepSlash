<% cache ['v1','submitProjectFB'] do %>
	<% title "Submission", false %>
 	 <%= javascript_include_tag "jquery.min","rails" %>
        <%= javascript_include_tag Rails.env.production? ? 'project_submit.min' :'project_submit' %>
	<%= stylesheet_link_tag Rails.env.production? ? 'application.min' :'application' %>
	<%= stylesheet_link_tag Rails.env.production? ? 'about.min' :'about' %>
	<div id="fb_about">
	<div id="proj_sub" style="display:none;">
          </div>
	<!--div class="about_text">
	  <p style="margin:15px;">
	  In today's world when we have to learn something, usually our first step is to surf the web and see what we can find. There are many portals for giving users access to the vast research and implementation that has already been done. But as users, we felt the need of such a portal which can present interesting projects in an organized way. Grepslash is about discovering content with ease and not just discovering, it is also a platform for authors who want to showcase their work to a community. So just upload a project without creating any account and share it on social media with just a click.</p>
	  </div-->
	</div>
	<%# flash.each do |name, msg| %>
	      <%# content_tag(:div, raw(msg), :id => "flash_#{name}") %>
	    <%# end %>
	  <div id="feedback" >
	    <h2 class="bar" ><b>Submit your project</b></h2>
	    <%= form_for @feedback_message, url:{ :action=>'createForFb'}, remote:true do |f| %>
	      <%= f.error_messages %>
	      <div class="info">
	      </div>
	      <div class="special_email_field">
		<%= label_tag :email %>
		<%= text_field_tag :email, "", :autocomplete => "off" %>
		(do not fill)
	      </div>
	      <div class="field">
		<%= f.label :name, "Author's Name*" %>
		<%= f.text_field :name %>
	      </div>
	      <div class="field">
		<%= f.label :email, "Email ID*" %>
		<%= f.text_field :email %>
	      </div>
	      <div class="field">
		<%= f.label :affiliation, "Author's Affiliation*" %>
		<%= f.text_field :affiliation %>
	      </div>
	      <div class="field">
		<%= f.label :title, "Project Title*" %>
		<%= f.text_field :title %>
	      </div>
	      <div class="field">
		<%= f.label :projectType, "Project Type" %>
		<%=f.select(:projectType, options_for_select([['OpenSource', 'OpenSource'], ['Startup', 'Startup'], ['Research', 'Research']])) %>
	      </div>
	      <div class="field">
		<%= f.label :image, "Representational image URL*" %>
		<%= f.text_area :image, :rows => 2, :cols => 50 %>
	      </div>
	      <div class="field">
		<%= f.label :content, "Project Description and Relevant Links*" %>
		<%= f.text_area :content, :rows => 14, :cols => 50 %>
	      </div>
	      <div class="field">
		<%= f.label :about, "About the Author*" %>
		<%= f.text_area :about, :rows => 5, :cols => 50 %>
	      </div>
	      	      <div class="field" >
		<%= f.label :collaborationRequired, "Looking for collaborators" %>
		<%= f.check_box(:collaborationRequired, :class=>"collaboration_required_check_box") %>
		<%= label_tag(:collaborationRequired, "Yes", ) %>
	      </div>
	      <div class="field collabRequired">
		<%= f.label :skillSet, "Skill-set*" %>
		<%= f.text_field :skillSet %>
	      </div>
	      <div class="field collabRequired">
		<%= f.label :progressLevel, "Project progress level*" %>
	       
		<%=f.select(:progressLevel, options_for_select([['Yet to start', 'Yet to start'], ['Started', 'Started'], ['Near completion', 'Near completion']])) %>
		</select>
	      </div>
	      <div style="text-align:center;"><div class="actions" style="width:50%;margin:0 auto;"><%= f.submit "Submit",:class=>"submit-button" %></div></div>
	    <% end %>

	  </div>
<% end %>
